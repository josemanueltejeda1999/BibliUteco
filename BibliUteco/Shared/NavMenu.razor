@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject UserManager<IdentityUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider
@inject SignInManager<IdentityUser> SignInManager
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark bg-bibliuteco">
    <div class="container-fluid d-flex align-items-center">
        <a class="navbar-brand text-white fw-bold fs-4" href="">BibliUTECO</a>

        <div class="d-flex align-items-center ms-auto">
            <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable bg-bibliuteco" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="px-3 py-3 border-bottom border-success user-info-section">
                    <div class="d-flex align-items-center">
                        <div class="user-avatar me-2">
                            <i class="bi bi-person-circle text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <small class="text-white-50 d-block">Sesión iniciada</small>
                            <strong class="text-white small">@context.User.Identity?.Name</strong>
                            @if (rolActual != null)
                            {
                                <br />
                                <span class="badge @ObtenerClaseBadge(rolActual) mt-1">@rolActual</span>
                            }
                        </div>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-custom" href="dashboard" Match="NavLinkMatch.All">
                <span class="nav-icon bi bi-speedometer2" aria-hidden="true"></span>
                <span class="nav-text">Dashboard</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-custom" href="" Match="NavLinkMatch.All">
                <span class="nav-icon bi bi-house-door" aria-hidden="true"></span>
                <span class="nav-text">Inicio</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-custom" href="libros">
                <span class="nav-icon bi bi-book" aria-hidden="true"></span>
                <span class="nav-text">Libros</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-custom" href="prestamos">
                <span class="nav-icon bi bi-clipboard-check" aria-hidden="true"></span>
                <span class="nav-text">Préstamos</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-custom" href="categorias">
                <span class="nav-icon bi bi-folder" aria-hidden="true"></span>
                <span class="nav-text">Categorías</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-custom" href="estudiantes">
                <span class="nav-icon bi bi-people" aria-hidden="true"></span>
                <span class="nav-text">Estudiantes</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-custom" href="autores">
                <span class="nav-icon bi bi-person-lines-fill" aria-hidden="true"></span>
                <span class="nav-text">Autores</span>
            </NavLink>
        </div>

        <AuthorizeView Roles="Administrador">
            <div class="nav-item px-3">
                <NavLink class="nav-link nav-link-custom" href="usuarios">
                    <span class="nav-icon bi bi-person-gear" aria-hidden="true"></span>
                    <span class="nav-text">Usuarios</span>
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Administrador,Bibliotecario">
            <div class="nav-item px-3">
                <NavLink class="nav-link nav-link-custom" href="reportes">
                    <span class="nav-icon bi bi-file-earmark-bar-graph" aria-hidden="true"></span>
                    <span class="nav-text">Reportes</span>
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link nav-link-custom" href="multas">
                    <span class="nav-icon bi bi-cash-coin" aria-hidden="true"></span>
                    <span class="nav-text">Multas</span>
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "collapse show";

    private string? rolActual;
    private bool cargandoRol;

    private static readonly SemaphoreSlim _rolesLock = new SemaphoreSlim(1,1);

    protected override async Task OnParametersSetAsync()
    {
        await _rolesLock.WaitAsync();
        try
        {
            if (cargandoRol) // evita reentrada concurrente
                return;

            cargandoRol = true;
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                // Obtener primer role (o ajusta si esperas varios)
                rolActual = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
            }
            else
            {
                rolActual = null;
            }
        }
        finally
        {
            cargandoRol = false;
            _rolesLock.Release();
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private string ObtenerClaseBadge(string rol)
    {
        return rol switch
        {
            "Administrador" => "bg-danger",
            "Bibliotecario" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }
}