@page "/libros/detalles/{Id:int}"
@using BibliUteco.Models
@using BibliUteco.Services.Interfaces
@inject ILibroService LibroService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@attribute [Authorize]

<PageTitle>Detalles del Libro - BibliUteco</PageTitle>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @if (libro == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3 text-muted">Cargando datos del libro...</p>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h3 class="mb-0"><i class="bi bi-book"></i> Detalles del Libro</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center mb-4">
                                @if (!string.IsNullOrWhiteSpace(libro.ImagenUrl))
                                {
                                    <img src="@libro.ImagenUrl" alt="@libro.Titulo" class="img-fluid rounded shadow-sm mb-3"
                                         style="max-height: 400px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light rounded shadow-sm p-5 mb-3" style="height: 400px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-book text-muted" style="font-size: 120px;"></i>
                                    </div>
                                }

                                <div class="d-grid gap-2">
                                    @if (libro.CantidadDisponible > 0)
                                    {
                                        <span class="badge bg-success p-3">
                                            <i class="bi bi-check-circle"></i> Disponible
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger p-3">
                                            <i class="bi bi-x-circle"></i> No Disponible
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="col-md-8">
                                <h2 class="mb-3">@libro.Titulo</h2>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="fw-bold text-muted small">AUTOR</label>
                                        <p class="mb-0"><i class="bi bi-person"></i> @libro.Autor?.NombreCompleto</p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="fw-bold text-muted small">CATEGORÍA</label>
                                        <p class="mb-0"><i class="bi bi-folder"></i> @libro.Categoria?.Nombre</p>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="fw-bold text-muted small">ISBN</label>
                                        <p class="mb-0"><code>@libro.ISBN</code></p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="fw-bold text-muted small">EDITORIAL</label>
                                        <p class="mb-0"><i class="bi bi-building"></i> @libro.Editorial</p>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label class="fw-bold text-muted small">AÑO</label>
                                        <p class="mb-0">@(libro.AñoPublicacion?.ToString() ?? "N/A")</p>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="fw-bold text-muted small">IDIOMA</label>
                                        <p class="mb-0">@(libro.Idioma ?? "N/A")</p>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="fw-bold text-muted small">PÁGINAS</label>
                                        <p class="mb-0">@(libro.NumeroPaginas?.ToString() ?? "N/A")</p>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="fw-bold text-muted small">CANTIDAD TOTAL</label>
                                        <p class="mb-0">
                                            <span class="badge bg-primary">@libro.CantidadTotal</span> ejemplares
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="fw-bold text-muted small">DISPONIBLES</label>
                                        <p class="mb-0">
                                            <span class="badge @(libro.CantidadDisponible > 0 ? "bg-success" : "bg-danger")">
                                                @libro.CantidadDisponible
                                            </span> disponibles
                                        </p>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">ESTADO</label>
                                    <p class="mb-0">
                                        @if (libro.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold text-muted small">FECHA DE REGISTRO</label>
                                    <p class="mb-0">@libro.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(libro.Descripcion))
                        {
                            <hr />
                            <div class="mb-3">
                                <h5 class="text-muted mb-3">Descripción</h5>
                                <p class="text-justify">@libro.Descripcion</p>
                            </div>
                        }

                        <hr />

                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-clock-history"></i> Historial de Préstamos
                                <span class="badge bg-primary">@(libro.Prestamos?.Count ?? 0)</span>
                            </h5>

                            @if (libro.Prestamos == null || !libro.Prestamos.Any())
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> Este libro no tiene préstamos registrados aún.
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Estudiante</th>
                                                <th>Fecha Préstamo</th>
                                                <th>Fecha Devolución Esperada</th>
                                                <th>Fecha Devolución Real</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var prestamo in libro.Prestamos.OrderByDescending(p => p.FechaPrestamo))
                                            {
                                                <tr>
                                                    <td>@prestamo.Estudiante?.NombreCompleto</td>
                                                    <td>@prestamo.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                                                    <td>@prestamo.FechaDevolucionEsperada.ToString("dd/MM/yyyy")</td>
                                                    <td>@(prestamo.FechaDevolucionReal?.ToString("dd/MM/yyyy") ?? "-")</td>
                                                    <td>
                                                        @if (prestamo.Estado == "Prestado")
                                                        {
                                                            <span class="badge bg-warning">Prestado</span>
                                                        }
                                                        else if (prestamo.Estado == "Devuelto")
                                                        {
                                                            <span class="badge bg-success">Devuelto</span>
                                                        }
                                                        else if (prestamo.Estado == "Atrasado")
                                                        {
                                                            <span class="badge bg-danger">Atrasado</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <button class="btn btn-secondary" @onclick="Volver">
                                <i class="bi bi-arrow-left"></i> Volver
                            </button>
                            <div>
                                <button class="btn btn-warning me-2" @onclick="IrAEditar">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                                <button class="btn btn-danger" @onclick="ConfirmarEliminar">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Libro? libro;

    protected override async Task OnInitializedAsync()
    {
        await CargarLibro();
    }

    private async Task CargarLibro()
    {
        libro = await LibroService.ObtenerPorIdAsync(Id);

        if (libro == null)
        {
            await JS.InvokeVoidAsync("alert", "Libro no encontrado");
            Navigation.NavigateTo("/libros");
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo("/libros");
    }

    private void IrAEditar()
    {
        Navigation.NavigateTo($"/libros/editar/{Id}");
    }

    private async Task ConfirmarEliminar()
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm",
            $"¿Está seguro de eliminar el libro '{libro!.Titulo}'?");

        if (confirmado)
        {
            var resultado = await LibroService.EliminarAsync(Id);
            if (resultado)
            {
                await JS.InvokeVoidAsync("alert", "Libro eliminado exitosamente");
                Navigation.NavigateTo("/libros");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "No se pudo eliminar el libro. Puede que tenga préstamos activos.");
            }
        }
    }
}