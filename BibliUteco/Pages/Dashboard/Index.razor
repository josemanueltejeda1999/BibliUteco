@page "/dashboard"
@using BibliUteco.Services.Interfaces
@using BibliUteco.Models
@using Microsoft.AspNetCore.Authorization
@inject IDashboardService DashboardService
@inject NavigationManager Navigation
@attribute [Authorize(Roles = "Administrador,Bibliotecario")]

<PageTitle>Dashboard - BibliUteco</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-0">📊 Dashboard</h2>
            <p class="text-muted mb-0">Resumen general del sistema</p>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando estadísticas...</p>
        </div>
    }
    else if (hayError)
    {
        <div class="alert alert-danger">
            <h4>Error al cargar el Dashboard</h4>
            <p>@mensajeError</p>
            <button class="btn btn-primary" @onclick="CargarDatos">Reintentar</button>
        </div>
    }
    else if (estadisticas != null)
    {
        <!-- Tarjetas de Estadísticas Principales -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card border-start border-primary border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small">Total de Libros</div>
                                <div class="h3 mb-0">@estadisticas.TotalLibros</div>
                                <div class="small text-success">
                                    <i class="bi bi-check-circle"></i> @estadisticas.LibrosDisponibles disponibles
                                </div>
                            </div>
                            <div class="ms-3">
                                <i class="bi bi-book text-primary" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-start border-success border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small">Estudiantes</div>
                                <div class="h3 mb-0">@estadisticas.TotalEstudiantes</div>
                                <div class="small text-success">
                                    <i class="bi bi-person-check"></i> @estadisticas.EstudiantesActivos con préstamos
                                </div>
                            </div>
                            <div class="ms-3">
                                <i class="bi bi-people text-success" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-start border-warning border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small">Préstamos Activos</div>
                                <div class="h3 mb-0">@estadisticas.PrestamosActivos</div>
                                <div class="small text-warning">
                                    <i class="bi bi-exclamation-triangle"></i> @estadisticas.PrestamosAtrasados atrasados
                                </div>
                            </div>
                            <div class="ms-3">
                                <i class="bi bi-clipboard-check text-warning" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-start border-danger border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small">Multas Pendientes</div>
                                <div class="h3 mb-0">RD$ @estadisticas.TotalMultasPendientes.ToString("N2")</div>
                                <div class="small text-danger">
                                    <i class="bi bi-cash"></i> Por cobrar
                                </div>
                            </div>
                            <div class="ms-3">
                                <i class="bi bi-exclamation-circle text-danger" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="alert alert-success">
            <strong>Dashboard cargado exitosamente!</strong> Las estadísticas básicas funcionan correctamente.
        </div>
    }
</div>

@code {
    private EstadisticasGenerales? estadisticas;
    private bool cargando = true;
    private bool hayError = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        hayError = false;
        mensajeError = "";

        try
        {
            estadisticas = await DashboardService.ObtenerEstadisticasGeneralesAsync();
            cargando = false;
        }
        catch (Exception ex)
        {
            hayError = true;
            mensajeError = $"Error: {ex.Message}";
            cargando = false;
        }
    }
}